{
  "manifest_version": 3,
  "name": "LingoCards Helper",
  "version": "1.0.0",
  "description": "Add words to your LingoCards flashcards from any webpage",

  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "notifications"
  ],

  "host_permissions": [
    "https://api.mymemory.translated.net/*",
    "https://libretranslate.com/*",
    "https://qhnyqajcijojpuufxyrn.supabase.co/*"
  ],

"background": {
  "service_worker": "chrome/background.js"
},

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}